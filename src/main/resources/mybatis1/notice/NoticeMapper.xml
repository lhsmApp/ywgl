<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="NoticeMapper">
	
	<!--表名 -->
	<sql id="tableName">
		tb_notice
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		NOTICE_CONTENT,	
		NOTICE_USER,	
		NOTICE_TYPE,	
		START_TIME,	
		END_TIME,	
		ATTACHMENT_PATH,	
		STATE,	
		USER_DEPART,	
		CREATE_DATE
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NOTICE_CONTENT},	
		#{NOTICE_USER},	
		#{NOTICE_TYPE},	
		#{START_TIME},	
		#{END_TIME},	
		#{ATTACHMENT_PATH},	
		#{STATE},	
		#{USER_DEPART},	
		#{CREATE_DATE}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			NOTICE_ID = #{NOTICE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NOTICE_CONTENT = #{NOTICE_CONTENT},
			NOTICE_USER = #{NOTICE_USER},
			NOTICE_TYPE = #{NOTICE_TYPE},
			START_TIME = #{START_TIME},
			END_TIME = #{END_TIME},
			ATTACHMENT_PATH = #{ATTACHMENT_PATH},
			NOTICE_ID = NOTICE_ID
			where 
			NOTICE_ID = #{NOTICE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			NOTICE_ID = #{NOTICE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			NOTICE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
    
    <!-- 查看自己有没有消息 -->
    <select id="getMyNotice" parameterType="pd" resultType="pd">
        select NOTICE_ID,NOTICE_CONTENT 
        from tb_notice 
        <where>
            NOTICE_ID in (
            select NOTICE_ID from tb_notice_detail 
            <where>
                USER_ID = #{USER_ID} AND STATE=0 AND START_TIME&lt;NOW() AND END_TIME&gt;NOW()
            </where>
            )
        </where>
    </select>
     
    <!-- 选择发布范围，展示角色列表 -->
    <select id="showSysRoleList"  parameterType="page" resultType="pd">
        select ROLE_ID,ROLE_NAME FROM sys_role
        <where>
        PARENT_ID=1
        </where>
    </select>
    <!-- 选择发布范围，展示人员列表 -->
    <select id="showSysUserList"  parameterType="page" resultType="pd">
        select USER_ID,USERNAME,NAME,DEPARTMENT_ID,UNIT_CODE  FROM  sys_user
        <where>
        STATUS=1
        </where>
    </select>
</mapper>