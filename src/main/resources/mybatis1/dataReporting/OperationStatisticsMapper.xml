<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OperationStatisticsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		tb_di_operation_statistics
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		COMPANY_NAME,	
		AGENCY_OPER_NUM,	
		NETWORK_OPER_NUM,	
		SECURITY_OPER_NUM,	
		ERP_OPER_NUM,	
		CLOUD_OPER_NUM,	
		TOTAL_OPER_NUM,	
		STATE	
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{COMPANY_NAME},	
		#{AGENCY_OPER_NUM},	
		#{NETWORK_OPER_NUM},	
		#{SECURITY_OPER_NUM},	
		#{ERP_OPER_NUM},	
		#{CLOUD_OPER_NUM},	
		#{TOTAL_OPER_NUM},	
		#{STATE}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
			<include refid="tableName"></include>
		(
			<include refid="Field"></include>
		) value (
			<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			COMPANY_NAME = #{COMPANY_NAME},
			AGENCY_OPER_NUM = #{AGENCY_OPER_NUM},
			NETWORK_OPER_NUM = #{NETWORK_OPER_NUM},
			SECURITY_OPER_NUM = #{SECURITY_OPER_NUM},
			ERP_OPER_NUM = #{ERP_OPER_NUM},
			CLOUD_OPER_NUM = #{CLOUD_OPER_NUM},
			TOTAL_OPER_NUM = #{TOTAL_OPER_NUM}
		where 
			ID = #{ID}
	</update>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
			ID,
			COMPANY_NAME,	
			AGENCY_OPER_NUM,	
			NETWORK_OPER_NUM,	
			SECURITY_OPER_NUM,	
			ERP_OPER_NUM,	
			CLOUD_OPER_NUM,	
			TOTAL_OPER_NUM
		from 
		<include refid="tableName"></include>
		where STATE = 1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 批量删除 -->
	<update id="deleteAll" parameterType="String">
		update
			<include refid="tableName"></include>
		set
			STATE = 0
		where 
			ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</update>
	
	<!-- 导出列表 -->
	<select id="exportList" parameterType="Page" resultType="pd">
		select 
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where 
			STATE = 1
		order by 
			ID
	</select>
	
	<!-- 更新数据 -->
	<update id="delAndIns" parameterType="pd">
		<foreach item="item" index="index" collection="list" open=" " separator=" " close=" ">
		    delete from <include refid="tableName"></include>
		    where ID = #{item.ID};
	        insert into 
	        <include refid="tableName"></include>
		       (
					<include refid="Field"></include>
				) value (
					#{item.COMPANY_NAME},	
					#{item.AGENCY_OPER_NUM},	
					#{item.NETWORK_OPER_NUM},	
					#{item.SECURITY_OPER_NUM},	
					#{item.ERP_OPER_NUM},	
					#{item.CLOUD_OPER_NUM},	
					#{item.TOTAL_OPER_NUM},	
					"1"
				);
		</foreach>
	</update>
	
	<!-- 导出模板 -->
	<select id="exportModel" parameterType="pd" resultType="pd">
		select 
			<include refid="Field"></include> 
		from 
			<include refid="tableName"></include>
		where 
			STATE = 1 
		limit 1
	</select>
</mapper>